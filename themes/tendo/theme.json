{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "page-no-title",
			"title": "Page (No Title)",
			"postTypes": [
				"page"
			]
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#FFA800",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#E96220",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#FCE6DC",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		},
		"layout": {
			"contentSize": "840px",
			"wideSize": "1200px"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "1rem",
					"slug": "30",
					"name": "Small"
				},
				{
					"size": "clamp(1rem, 4vw, 2rem)",
					"slug": "40",
					"name": "Medium"
				},
				{
					"size": "clamp(2rem, 8vw, 4rem)",
					"slug": "50",
					"name": "Large"
				},
				{
					"size": "clamp(4rem, 10vw, 8rem)",
					"slug": "60",
					"name": "Huge"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Courier New\", Courier, \"Lucida Sans Typewriter\", \"Lucida Typewriter\", monospace",
					"slug": "courier-new"
				},
				{
					"fontFamily": "Arial, \"Helvetica Neue\", Helvetica, sans-serif",
					"slug": "arial-helvetica"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"size": "0.8rem",
					"slug": "small"
				},
				{
					"fluid": false,
					"size": "1rem",
					"slug": "base"
				},
				{
					"fluid": {
						"min": "1.25rem",
						"max": "1.42rem"
					},
					"size": "1.42rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.56rem",
						"max": "1.89rem"
					},
					"size": "1.89rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "1.95rem",
						"max": "2.52rem"
					},
					"size": "2.52rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "2.44rem",
						"max": "3.35rem"
					},
					"size": "3.35rem",
					"slug": "xx-large"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"spacing": {
			"blockGap": "1rem",
			"padding": {
				"top": "var(--wp--preset--spacing--30)",
				"right": "var(--wp--preset--spacing--30)",
				"bottom": "var(--wp--preset--spacing--30)",
				"left": "var(--wp--preset--spacing--30)"
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--base)",
			"fontFamily": "var(--wp--preset--font-family--courier-new)",
			"lineHeight": "1.6"
		},
		"color": {
			"background": "var(--wp--preset--color--tertiary)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"heading": {
				"typography": {
					"lineHeight": "1.4"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline dashed"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"typography": {
					"textDecoration": "underline"
				}
			},
			"button": {
				"spacing": {
					"padding": {
						"top": "12px",
						"right": "20px",
						"bottom": "12px",
						"left": "20px"
					}
				},
				"border": {
					"width": "0",
					"radius": "0px",
					"style": "solid",
					"color": "var(--wp--preset--color--contrast)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontWeight": "700"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--contrast)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--contrast)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontWeight": "700"
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontFamily": "var(--wp--preset--font-family--arial-helvetica)",
					"fontWeight": "700"
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
