{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Chill",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#79A7EA",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#50586C",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#DCE2F0",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			},
			"button": {
				"color": {
					"text": "var(--wp--preset--color--base)",
					"background": "var(--wp--preset--color--secondary)"
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--base)"
					}
				}
			}
		}
	}
}