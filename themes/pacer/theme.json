{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "900px",
			"wideSize": "1200px"
		},
		"color": {
			"palette": [
				{
					"color": "#202020",
					"name": "Raisin Black",
					"slug": "raisin-black"
				},
				{
					"color": "#303030",
					"name": "Dark Charcoal",
					"slug": "dark-charcoal"
				},
				{
					"color": "#707070",
					"name": "Dark Silver",
					"slug": "dark-silver"
				},
				{
					"color": "#185adb",
					"name": "Celtic Blue",
					"slug": "celtic-blue"
				},
				{
					"color": "#ffc947",
					"name": "Crayola",
					"slug": "crayola"
				},
				{
					"color": "#c32148",
					"name": "Bright Maroon",
					"slug": "bright-maroon"
				},
				{
					"color": "#dbdbdb",
					"name": "Light Silver",
					"slug": "light-silver"
				},
				{
					"color": "#e4e4e4",
					"name": "Platinum",
					"slug": "platinum"
				},
				{
					"color": "#f6f6f6",
					"name": "Cultured",
					"slug": "cultured"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, system-ui, Roboto, Ubuntu, Cantarell, sans-serif",
					"slug": "system",
					"name": "System"
				},
				{
					"fontFamily": "'Domine', sans-serif",
					"slug": "domine",
					"name": "Domine"
				},
				{
					"fontFamily": "'Josefin Sans', sans-serif",
					"slug": "josefin-sans",
					"name": "Josefin Sans"
				}
			]
		},
		"custom": {
			"lineHeight": "1.8"
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "0"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--domine)",
			"fontSize": "1rem",
			"lineHeight": "1.8"
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--dark-charcoal)"
		},
		"elements": {
			"link": {
				"typography": {
					"textDecoration": "none"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "2.25rem",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "2rem",
					"fontWeight": "600",
					"lineHeight": "1.45"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "1.75rem",
					"fontWeight": "600",
					"lineHeight": "1.5"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "1.5rem",
					"fontWeight": "600",
					"lineHeight": "1.55"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "1.125rem",
					"fontWeight": "600",
					"lineHeight": "1.6"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "1rem",
					"fontWeight": "600",
					"lineHeight": "1.65"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				}
			}
		},
		"blocks": {
			"core/spacer": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "3.5rem",
					"letterSpacing": "-1px",
					"lineHeight": "1"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "0.875rem"
				},
				"color": {
					"text": "var(--wp--preset--color--raisin-black)"
				},
				"spacing": {
					"padding": {
						"top": ".75rem",
						"bottom": ".75rem"
					},
					"blockGap": "1.5rem"
				}
			},
			"core/paragraph": {
				"spacing": {
					"margin": {
						"top": "1.5625rem",
						"bottom": "1.5625rem"
					}
				}
			},
			"core/button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--josefin-sans)",
					"fontSize": "0.875rem",
					"fontWeight": "600",
					"lineHeight": "2.6875rem"
				},
				"color": {
					"text": "var(--wp--preset--color--white)",
					"background": "var(--wp--preset--color--raisin-black)"
				},
				"border": {
					"radius": "0"
				}
			},
			"core/post-template": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"core/post-featured-image": {
				"typography": {
					"lineHeight": "0"
				}
			},
			"core/social-links": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header-with-logo",
			"area": "header"
		},
		{
			"name": "header-with-title",
			"area": "header"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	]
}