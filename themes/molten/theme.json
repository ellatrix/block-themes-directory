{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "customTemplates": [
        {
            "name": "template-blank",
            "title": "Blank",
            "postTypes": [
                "page",
                "post"
            ]
        },
        {
            "name": "template-hide-title",
            "title": "Hide Title",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "template-split-header",
            "title": "Split Header",
            "postTypes": [
                "post"
            ]
        }
    ],
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "foreground",
                    "color": "#000000",
                    "name": "Foreground"
                },
                {
                    "slug": "background",
                    "color": "#ffffff",
                    "name": "Background"
                },
                {
                    "slug": "hover",
                    "color": "#ffffff",
                    "name": "Hover"
                }
            ]
        },
        "custom": {
            "spacing": {
                "outer": "clamp(16px, 4vw, 48px)",
                "gap": {
                    "vertical": "clamp(16px, 8vw, 128px)",
                    "horizontal": "clamp(32px, 4vw, 72px)"
                }
            },
            "typography": {
                "font-size": {
                    "colossal": "clamp(3.25rem, 8vw, 6.25rem)"
                }
            }
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1440px"
        },
        "spacing": {
            "blockGap": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Playfair Display\",serif",
                    "slug": "playfair-display",
                    "name": "Playfair Display",
                    "fontFace": [
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "200 900",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-VariableFont_wght.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "200 900",
                            "fontStyle": "italic",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-Italic-VariableFont_wght.woff2"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "\"Source Sans Pro\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", \"Roboto\", \"Oxygen-Sans\", \"Ubuntu\", \"Cantarell\", \"Helvetica Neue\", sans-serif",
                    "slug": "source-sans-pro",
                    "name": "Source Sans Pro",
                    "fontFace": [
                        {
                            "fontFamily": "Source Sans Pro",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/source-sans-pro-regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Source Sans Pro",
                            "fontStyle": "normal",
                            "fontWeight": "700",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/source-sans-pro-700.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Source Sans Pro",
                            "fontStyle": "italic",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/source-sans-pro-italic.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Source Sans Pro",
                            "fontStyle": "italic",
                            "fontWeight": "700",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/source-sans-pro-700italic.woff2"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "\"Inconsolata\", ui-monospace, Menlo, Consolas, Monaco, \"Liberation Mono\", \"Lucida Console\", monospace",
                    "slug": "inconsolata",
                    "name": "Inconsolata",
                    "fontFace": [
                        {
                            "fontFamily": "Inconsolata",
                            "fontWeight": "200 900",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [
                                "file:./assets/fonts/Inconsolata-VariableFont_wdth-wght.woff2"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "clamp(0.875rem, 1vw, 1rem)"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "clamp(1rem, 2vw, 1.25rem)"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "clamp(1.5rem, 4vw, 2.25rem)"
                },
                {
                    "name": "Extra Large",
                    "slug": "x-large",
                    "size": "clamp(1.875rem, 6vw, 4.5rem)"
                },
                {
                    "name": "Double Extra Large",
                    "slug": "xx-large",
                    "size": "clamp(2.5rem, 8vw, 5.25rem)"
                },
                {
                    "name": "Huge",
                    "slug": "huge",
                    "size": "clamp(2.5rem, 13vw, 6.25rem)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--foreground)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "400",
                    "lineHeight": "1",
                    "letterSpacing": "-2px"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "400",
                    "lineHeight": "1",
                    "letterSpacing": "-2px"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "400",
                    "lineHeight": "1.15"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "400",
                    "lineHeight": "1.15"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "400",
                    "textTransform": "uppercase"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "400",
                    "textTransform": "uppercase"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--foreground)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.4"
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "0",
                    "color": "var(--wp--preset--color--foreground)",
                    "width": "2px",
                    "style": "solid"
                },
                "color": {
                    "background": "var(--wp--preset--color--foreground)",
                    "text": "var(--wp--preset--color--background)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                }
            },
            "core/navigation-link": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                }
            },
            "core/media-text": {
                "spacing": {
                    "padding": {
                        "left": "0px",
                        "right": "0px"
                    }
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(2rem, 6vw, 2rem)",
                    "fontWeight": "500",
                    "lineHeight": "1",
                    "letterSpacing": "2px",
                    "textTransform": "uppercase"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--foreground)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        }
                    }
                }
            },
            "core/quote": {
                "border": {
                    "width": "1px"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)"
                }
            }
        },
        "spacing": {
            "blockGap": "1.5rem"
        }
    },
    "templateParts": [
        {
            "name": "header-default",
            "title": "Header (Default)",
            "area": "header"
        },
        {
            "name": "header-menu-center",
            "title": "Header (Menu centered, Button on right)",
            "area": "header"
        },
        {
            "name": "footer-default",
            "title": "Footer (Default)",
            "area": "footer"
        },
        {
            "name": "footer-default-dark",
            "title": "Footer (Default - Dark)",
            "area": "footer"
        },
        {
            "name": "footer-simple",
            "title": "Footer (Simple)",
            "area": "footer"
        }
    ]
}
