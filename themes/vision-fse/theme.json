{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": "true",
    "layout": {
      "contentSize": "1240px"
    },
    "color": {
      "palette": [
        {
          "slug": "vision-base",
          "color": "#00265E",
          "name": "vision Base"
        },
        {
          "slug": "vision-hover",
          "color": "#FF6600",
          "name": "vision Hover"
        }
      ]
    },
    "border": {
      "radius": true
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "name": "System Font",
          "slug": "system"
        },
        {
          "fontFamily": "\"Nunito Sans\", sans-serif",
          "name": "Nunito Sans Serif",
          "slug": "nunito",
          "fontFace": [
            {
              "fontFamily": "Nunito Sans",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/nunito/NunitoSans-Regular.ttf"]
            },
                        {
              "fontFamily": "Nunito Sans",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/nunito/NunitoSans-Bold.ttf"]
            },
            {
              "fontFamily": "Nunito Sans",
              "fontWeight": "600",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/nunito/NunitoSans-SemiBold.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "very-small",
          "size": "16px",
          "name": "Very Small"
        },
        {
          "slug": "normal",
          "size": "17px",
          "name": "Normal"
        },
        {
          "slug": "semi-medium",
          "size": "22px",
          "name": "Semi Medium"
        },
        {
          "slug": "medium",
          "size": "26px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "37px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "65px",
          "name": "Extra Large"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "core/query": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--vision-base)"
            }
          }
        }
      },
      "core/post-excerpt": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--vision-hover) !important"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--vision-base) !important"
              }
            }
          }
        }
      },
      "core/post-title": {
        "elements": {
          "link": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--medium)"
            }
          }
        }
      },
      "core/list-item": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--white)"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--normal)"
            }
          }
        }
      },
      "core/comments": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--vision-base)"
            }
          }
        }
      },
      "core/tag": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--white) !important"
            }
          }
        }
      },     
      "core/comment-date": {
        "elements": {
          "link": {
            "typography": {
              "fontSize": "15px"
            },
            "color": {
              "text": "var(--wp--preset--color--vision-hover) !important"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--vision-base) !important"
              }
            }
          }
        }
      },
      "core/comment-reply-link": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--vision-hover) !important"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--vision-base) !important"
              }
            },
            "typography": {
              "fontSize": "15px"
            }
          }
        }
      },
      "core/navigation": {
        "color": {
          "text": "var(--wp--preset--color--vision-base)"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--vision-base)",
              "textDecoration": "none"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--vision-hover)"
              },
              "typography": {
                "textDecoration": "none"
              }
            },
            ":focus": {
              "color": {
                "text": "var(--wp--preset--color--vision-hover)"
              },
              "typography": {
                "textDecoration": "none"
              }
            },
            ":active": {
              "color": {
                "text": "var(--wp--preset--color--vision-hover)"
              },
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none",
              "fontWeight": "600"
            }
          }
        }
      }
    },
    "elements": {
      "button": {
        "border": {
          "radius": "3px"
        },
        "color": {
          "background": "var(--wp--preset--color--vision-hover)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--vision-base)"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--vision-base)"
          }
        },
        ":active": {
          "color": {
            "background": "var(--wp--preset--color--vision-base)"
          }
        },
        ":visited": {
          "color": {
            "text": "var(--wp--preset--color--white)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--base)"
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          },
          "color": {
            "text": "var(--wp--preset--color--vision-hover)"
          }
        },
        ":focus": {
          "typography": {
            "textDecoration": "none"
          },
          "color": {
            "text": "var(--wp--preset--color--vision-hover)"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--color--vision-hover)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        },
        "color": {
          "text": "var(--wp--preset--color--vision-base)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "clamp(27.75px, 1.734rem + ((1vw - 7.68px) * 1.112), 37px)"
        },
        "color": {
          "text": "var(--wp--preset--color--vision-base)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--semi-medium)"
        },
        "color": {
          "text": "var(--wp--preset--color--vision-base)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "fontWeight": "600"
        },
        "color": {
          "text": "var(--wp--preset--color--vision-hover)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--very-small)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--nunito)"
    },
    "color": {
      "background": "#ffffff"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "area": "uncategorized",
      "name": "sidebar",
      "title": "Sidebar"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}
